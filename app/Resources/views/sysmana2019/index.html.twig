            </ul>
        </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
        <li><a href="sass.html">Sass</a></li>
        <li><a href="badges.html">Components</a></li>
        <li><a href="collapsible.html">JavaScript</a></li>
    </ul>

    <div id="containerPonentes">
            {% for ponente in ponentes %}

                <div id="{{ 'test' ~ loop.index }}">

                <div class="row">
                    {% for p in ponente %}
                        <div class="card col s2">
                            <div class="card-image waves-effect waves-block waves-light">
                                <img class="activator" src="{{ p.pathImg }}">
                            </div>
                            <div class="card-content">
                                <span class="card-title activator">{{ p.title }}<i class="material-icons right">more_vert</i></span>
                                <p>
                                    <b>Ponente/s</b><br/>
                                    {{ p.name }}
                                </p>
                                <p>
                                    <b>Asistente/s</b><br/>
                                    {{ p.assistants }}
                                </p>
                                <p>
                                    <b>Lugar</b><br/>
                                    {{ p.place }}
                                </p>
                            </div>
                            <div class="card-reveal">
                                <span class="card-title">{{ p.title }}<i class="material-icons right">close</i></span>
                                <p>{{ p.description }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>



                </div>

            {% endfor %}

    </div>



{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/jquery-3.3.1.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/materialize.min.js') }}"></script>
    <script>M.AutoInit();</script>
{% endblock %}

