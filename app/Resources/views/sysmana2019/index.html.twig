{% block body %}
    <nav class="nav-extended">
        <div class="nav-wrapper purple darken-4">
            <a href="#" class="brand-logo">Sysmana2019 - Taller iniciación symfony</a>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><span>{{ app.user.username }}</span></li>
                <li>
                    <a href="{{ path("fos_user_security_logout") }}">
                        <i class="material-icons">
                            power_settings_new
                        </i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="nav-content purple darken-3">
            <ul class="tabs tabs-transparent">
                <li class="tab"><a class="active" href="#test1">Lunes</a></li>
                <li class="tab"><a href="#test2">Martes</a></li>
                <li class="tab"><a href="#test3">Miércoles</a></li>
                <li class="tab"><a href="#test4">Jueves</a></li>
